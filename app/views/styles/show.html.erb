<p id="notice"><%= notice %></p>

<h2>
  <%= @style.name %>
</h2>

<quote>
  <%= @style.description %>
</quote>

<h4>Beers</h4>

<ul>
  <% @style.beers.each do |beer| %>
      <li>
        <%= link_to beer, beer %>
      </li>
  <% end %>
</ul>
<% if current_user.admin?%>
    <%= edit_and_destroy_buttons(@style) %>
<% end %>
