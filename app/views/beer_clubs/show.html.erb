<p id="notice"><%= notice %></p>

  <h1><%= @beer_club.name %></h1>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h2>Members</h2>
<table>
  <ul>
    <% @beer_club.memberships.each do |member| %>
        <li> <%= link_to member.show_member, memberships_path %> </li>
    <% end %>
  </ul>
</table>

<% if current_user %>

    <% if current_user.beer_clubs.include? @membership.beer_club %>
        <%= form_for(@membership, method: "delete") do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value: "End the membership" %>
        <% end %>
    <% end %>

    <% if not current_user.beer_clubs.include? @membership.beer_club %>
        <%= form_for(@membership) do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value:"join the club" %>
        <% end %>
    <% end %>

    <p><%= link_to 'Edit', edit_beer_club_path(@beer_club) %></p>
    <p><%= link_to 'Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
<p><%= link_to 'Back', beer_clubs_path %></p>

