<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<% if @beer.ratings.empty? %>
    <p>No ratings!</p>
<% else %>
    <p>Average rating: <%= @beer.average_rating %></p>>
<% end %>

<% if current_user %>
    <h4>Give a rating:</h4>

    <%= form_for(@rating) do |f| %>
        <%= f.hidden_field :beer_id %>
        score: <%= f.number_field :score %>
        <%= f.submit class:"btn btn-primary" %>
    <% end %>
    <%= link_to 'Edit', edit_beer_path(@beer), class:"btn btn-success" %>

    <% if current_user.admin?%>
        <%= link_to 'Destroy', @beer, class:"btn btn-danger",  method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
<% end %>
